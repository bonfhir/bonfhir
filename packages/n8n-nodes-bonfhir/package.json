{
  "name": "@bonfhir/n8n-nodes-bonfhir",
  "version": "0.1.0",
  "description": "BonFHIR node for n8n platform",
  "keywords": [
    "HL7",
    "FHIR",
    "BonFHIR",
    "n8n-community-node-package"
  ],
  "homepage": "https://bonfhir.dev/",
  "bugs": {
    "url": "https://github.com/bonfhir/bonfhir/issues"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bonfhir/bonfhir.git",
    "directory": "packages/n8n"
  },
  "scripts": {
    "build": "pnpm clean && rollup --config rollup.config.mjs",
    "check": "prettier --check ./src && eslint ./src && tsc --noEmit",
    "clean": "rimraf dist",
    "format": "eslint --fix ./src && prettier --log-level warn --write ./src",
    "n8n:start": "docker run -it --rm --name n8n -p 5678:5678 -v bonfhir_n8n_data:/home/node/.n8n -v \"${PWD}/package.json\":/home/node/.n8n/custom/package.json -v \"${PWD}/dist\":/home/node/.n8n/custom/dist docker.n8n.io/n8nio/n8n"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/FhirOAuth2Api.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Fhir/Fhir.node.js",
      "dist/nodes/FhirWebhookTrigger/FhirWebhookTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@bonfhir/core": "workspace:*",
    "@bonfhir/eslint-config": "workspace:*",
    "@bonfhir/eslint-plugin": "workspace:*",
    "@bonfhir/prettier-config": "workspace:*",
    "@bonfhir/typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/express": "^4.17.6",
    "@types/request-promise-native": "~1.0.15",
    "eslint-plugin-n8n-nodes-base": "^1.11.0",
    "glob": "^10.3.10",
    "n8n-core": "0.149.2",
    "n8n-workflow": "0.131.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.8.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-filesize": "^10.0.0",
    "typescript": "^5.2.2"
  },
  "prettier": "@bonfhir/prettier-config",
  "eslintConfig": {
    "extends": "@bonfhir/eslint-config",
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "package.json"
        ],
        "plugins": [
          "eslint-plugin-n8n-nodes-base"
        ],
        "extends": [
          "plugin:n8n-nodes-base/community"
        ],
        "rules": {
          "n8n-nodes-base/community-package-json-name-still-default": "off"
        }
      },
      {
        "files": [
          "./src/credentials/**/*.ts"
        ],
        "plugins": [
          "eslint-plugin-n8n-nodes-base"
        ],
        "extends": [
          "plugin:n8n-nodes-base/credentials"
        ],
        "rules": {
          "n8n-nodes-base/cred-class-field-documentation-url-missing": "off",
          "n8n-nodes-base/cred-class-field-documentation-url-miscased": "off"
        }
      },
      {
        "files": [
          "./src/nodes/**/*.ts"
        ],
        "plugins": [
          "eslint-plugin-n8n-nodes-base"
        ],
        "extends": [
          "plugin:n8n-nodes-base/nodes"
        ],
        "rules": {
          "n8n-nodes-base/node-param-resource-with-plural-option": "off",
          "n8n-nodes-base/node-execute-block-missing-continue-on-fail": "off",
          "n8n-nodes-base/node-resource-description-filename-against-convention": "off",
          "n8n-nodes-base/node-param-fixed-collection-type-unsorted-items": "off"
        }
      }
    ],
    "rules": {
      "unicorn/filename-case": "off"
    }
  }
}
